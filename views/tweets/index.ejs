<h2>Hi @<%= username %>!</h2>

  <form action="/tweets" method="POST" id="new-tweet">
    <label for="tweetText">Tweet</label>
    <input type="text" name="tweet" maxlength="140"
      placeholder="What's going on?" >
    <button class="button blue fright">Tweet!</button>
  </form>

  <% if (typeof(errorMessage) != "undefined") { %>
    <div class="error-message"><%= errorMessage %></div>
  <% } %>

  <% tweets.forEach((tweet) => { %>
    <div class="tweet-container">
      <p><%= tweet.tweet %></p>
      <p class="date"><%= moment(tweet.created_at).fromNow() %></p>
    </div>
  <% }) %>